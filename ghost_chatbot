<body>

<div class="chat-launcher" id="launcher">ðŸ’¬</div>
<div class="chat-window" id="chat">
  <div class="chat-header">GhostBot - Your AI Solutions Partner</div>
  <div class="chat-body" id="chat-body"></div>
  <div class="chat-input">
    <input type="text" id="chat-input" placeholder="Type your message...">
    <button onclick="sendMessage()">Send</button>
  </div>
</div>

<script>
  const launcher = document.getElementById('launcher');
  const chat = document.getElementById('chat');
  const chatBody = document.getElementById('chat-body');
  const input = document.getElementById('chat-input');

  let lead = {};
  let step = 0;

  launcher.onclick = () => {
    chat.style.display = 'flex';
    launcher.style.display = 'none';
    botSay("Hi, Iâ€™m GhostBot â€“ the AI assistant for Ghost AI Solutions. Are you a business owner, agency, or just browsing?");
  };

  function botSay(msg) {
    const msgDiv = document.createElement('div');
    msgDiv.className = 'message bot';
    msgDiv.textContent = msg;
    chatBody.appendChild(msgDiv);
    chatBody.scrollTop = chatBody.scrollHeight;
  }

  function userSay(msg) {
    const msgDiv = document.createElement('div');
    msgDiv.className = 'message user';
    msgDiv.textContent = msg;
    chatBody.appendChild(msgDiv);
    chatBody.scrollTop = chatBody.scrollHeight;
  }

  function sendMessage() {
    const msg = input.value.trim();
    if (!msg) return;
    userSay(msg);
    input.value = '';

    if (step === 0) {
      lead.role = msg;
      botSay("Great. Whatâ€™s your name?");
      step++;
    } else if (step === 1) {
      lead.name = msg;
      botSay("Thanks, " + lead.name + ". Whatâ€™s your email address?");
      step++;
    } else if (step === 2) {
      lead.email = msg;
      botSay("What company are you with?");
      step++;
    } else if (step === 3) {
      lead.company = msg;
      botSay("What industry are you in?");
      step++;
    } else if (step === 4) {
      lead.industry = msg;
      botSay("And whatâ€™s your main goal? (e.g., lead generation, automation, consulting)");
      step++;
    } else if (step === 5) {
      lead.goal = msg;
      botSay("Thanks! Want to schedule a 15-minute discovery call?");
      botSay("[Book Now](https://calendly.com/stephen-burch-ghostdefenses/strategy-call)");
      sendToWebhook();
      sendEmail();
      botSay("Youâ€™ll receive a confirmation email shortly. Feel free to ask about our services: AI bots, automation, lead gen, cybersecurity, pricing.");
      step++;
    } else {
      // Smart FAQ fallback
      botSay("Hereâ€™s a quick overview:");
      if (msg.toLowerCase().includes("ai bot")) botSay("We build custom AI bots for sales, support, and automation.");
      else if (msg.toLowerCase().includes("automation")) botSay("We help businesses automate repetitive tasks using AI workflows.");
      else if (msg.toLowerCase().includes("lead")) botSay("We generate and qualify leads using intelligent automation.");
      else if (msg.toLowerCase().includes("cyber")) botSay("We offer advanced AI-powered cybersecurity tools.");
      else if (msg.toLowerCase().includes("pricing")) botSay("We tailor solutionsâ€”reach out for a personalized quote.");
      else botSay("Iâ€™m happy to helpâ€”could you rephrase or specify?");
    }
  }

  function sendToWebhook() {
    fetch('https://your-webhook-url.com', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(lead)
    });
  }

  function sendEmail() {
    fetch('https://api.emailjs.com/api/v1.0/email/send', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        service_id: 'your_service_id',
        template_id: 'your_template_id',
        user_id: 'your_user_id',
        template_params: lead
      })
    });
  }
</script>

